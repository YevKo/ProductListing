<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-8">
    <form class="form-horisontal" id = "show-listing">
      <div class="form-group">
        <label><h3><%= @listing.title %></h3></label>
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input class="form-control readonly" placeholder=<%= number_to_currency(@listing.price, unit: "â‚¬ ") %>>
      </div>
      <div class="form-group">
        <label>Condition:</label>
